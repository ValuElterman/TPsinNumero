@using TPsinNumero.Models

<div class = "Index">
@if (ViewBag.info is Integrantes integrante)
{
    <h1>¡Bienvenido a tu perfil, @integrante.nombre! 😀</h1>
    <div>
        <h2>Información Personal</h2>
        <p>ID: @integrante.IdIntegrante</p>
        <p>Nombre: @integrante.nombre</p>
        <p>Apellido: @integrante.apellido</p>
        <p>Teléfono: @integrante.telefono</p>
        <p>Barrio: @integrante.barrio</p>
        <p>Mascota: @(integrante.mascota ? "Sí" : "No")</p>
        <p>Hobbie: @integrante.hobbie</p>
    </div>
}
else
{
    <p>No se pudo cargar la información del perfil. Por favor, inicie sesión nuevamente.</p>
}
<p><a href = '@Url.Action("Index", "Home")'>Ir a la página de inicio de sesión</a></p>
</div>